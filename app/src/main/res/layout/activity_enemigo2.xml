<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Enemigo2Activity">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow>

            <TextView
                android:id="@+id/DondeEstoy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_span="1"
                android:layout_weight="1"
                android:fontFamily="times"
                android:gravity="center"
                android:text="Â¡UN ENEMIGO!"
                android:textSize="20sp" />

        </TableRow>
        <TableRow>


            <androidx.core.widget.ContentLoadingProgressBar
                android:id="@+id/progressBar_Enemigo"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:layout_span="1"
                android:layout_weight="1"
                android:max="200"
                android:progress="200"
                android:progressTint="#FF0000"
                android:visibility="visible" />


        </TableRow>

        <TableRow>

            <ImageView
                android:id="@+id/imagenObjeto"
                android:layout_width="335dp"
                android:layout_height="289dp"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_span="2"
                android:layout_weight="1"
                android:src="@drawable/inicio"


                />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/Enemigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_span="1"
                android:layout_weight="1"
                android:fontFamily="times"
                android:gravity="center"
                android:text=""
                android:textSize="20sp" />

        </TableRow>
        <TableRow
            android:layout_marginTop="50dp">

            <TextView
                android:id="@+id/NombreJugador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_span="1"
                android:layout_weight="1"
                android:fontFamily="times"
                android:gravity="center"
                android:text=""
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="visible" />

        </TableRow>
        <TableRow
            android:layout_marginTop="10dp">

            <androidx.core.widget.ContentLoadingProgressBar
                android:id="@+id/progressBar_jugador"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:layout_span="1"
                android:layout_weight="1"
                android:indeterminate="false"
                android:max="200"
                android:progress="200"
                android:progressTint="#FF0000"
                android:visibility="visible"/>


        </TableRow>


        <TableRow
            android:layout_height="291dp"
            android:layout_marginTop="0dp"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="116dp">


          <Button
            android:id="@+id/BtnAtacar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_span="1"
            android:layout_weight="0"
            android:fontFamily="times"
            android:gravity="center"
            android:text="Atacar"
            android:textSize="20sp" />

            <Button
            android:id="@+id/BtnHuir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_span="1"
            android:layout_weight="0"
            android:fontFamily="times"
            android:gravity="center"
            android:text="Huir"
                android:layout_marginEnd="10dp"
            android:textSize="20sp" />

            <Button
            android:id="@+id/ConsumirObjeto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_span="1"
            android:layout_weight="0"
            android:fontFamily="times"
            android:gravity="center"
            android:text="Consumir \nObjeto"
                android:layout_marginEnd="20dp"
            android:textSize="20sp" />

        </TableRow>
    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>